<!-- res/layout/item_patient_record.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    >

    <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/timestampTextView"
        android:layout_alignBaseline="@id/predictionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timestamp: "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/predictionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prediction: "
        android:textSize="16sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/accuracyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accuracy: "
        android:textSize="16sp" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/predictionTextView"
        android:id="@+id/symptomsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms: "
        android:textSize="16sp" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/symptomsTextView"
        android:id="@+id/medicinesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicines: "
        android:textSize="16sp" />

</RelativeLayout>
