<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="@string/services"
                android:textColor="#26273a"
                android:textSize="28sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_predict"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_category_1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/predict_icon" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prediction_icon"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_vc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_category_2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/video_icon"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vc"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homeRemedies"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_category_3"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/medicine" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/medicine"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/top_doc"
                    android:textColor="#26273a"
                    android:textSize="28sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/doctorCard1"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#5C6BC0"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dr1Dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/doc_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <TextView
                        android:id="@+id/dr1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Isha Kalbhor"
                        android:textSize="26sp"
                        android:layout_toEndOf="@id/dr1Dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MBBS, MD"
                        android:layout_below="@id/dr1Name"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/dr1Dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/doctorCard2"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#FF80AB"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dr2Dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/doc_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <TextView
                        android:id="@+id/dr2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Wini Rasam"
                        android:textSize="26sp"
                        android:layout_toEndOf="@id/dr2Dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BAHMS, MD"
                        android:layout_below="@id/dr2Name"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/dr2Dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/doctorCard3"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#AED581"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dr3Dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/doc_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <TextView
                        android:id="@+id/dr3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. H . Y Khalate"
                        android:textSize="26sp"
                        android:layout_toEndOf="@id/dr3Dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MBBS, MD"
                        android:layout_below="@id/dr3Name"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/dr3Dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>